<% provide(:title, 'New Task') %>
<h1>タスク新規作成</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  
    <%= form_with(model: @task, local: true) do |f| %>
     <%= f.label:name, class:"label-form" %>
     <%= f.text_field:name, class:"form-control" %>
     
     <%= f.label:detail, class:"label-form" %>
     <%= f.text_area:detail, size:"40x5",class:"form-control" %>
     
      <%= f.submit "新規登録", class: "btn btn-primary btn-block btn-signup" %>
    <% end %>
  </div>
</div>
