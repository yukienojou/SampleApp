<% provide(:title, 'All Users') %>
<h1>タスク一覧</h1>

<div class="col-md-10 col-md-offset-1">
   <%= link_to "タスク新規作成", new_task_path(@user), class: "btn btn-lg btn-primary pull-right" %>
  <!--<!%= will_paginate %>-->
  <table class="table table-condensed table-hover" id="table-users">
    <thead>
      <tr>
        <th><%= Task.human_attribute_name :名称 %></th>
        <th><%= Task.human_attribute_name :作成日 %></th>
      </tr>
    </thead>

    <% @task.each do |task| %>
      <tr>
        <td><%= link_to task.name,task_path(task)%></td>
        <td><%= l(task.created_at, format: :long) %>
          <!--<!% if current_user.admin? && !current_user?(user) %>-->
            <%= link_to "編集",edit_task_path(task), class:"btn btn-primary "%>
            <%= link_to "削除",task_path(task), method: :delete, 
                data: { confirm: "削除してよろしいですか？" },
                class: "btn btn-danger" %>
           <% end %>
        </td>
      </tr>
    
  </table>
  <!--<!%= will_paginate %>-->
</div>

