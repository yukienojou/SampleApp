<% provide(:title, 'Edit Task') %>
<h1>タスク編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  
    <%= form_with(model: @task, local: true) do |f| %>
    <%= link_to "タスク編集",new_task_path, id:"list" %></li>
     <%= f.label:name, class:"label-form" %>
     <%= f.text_field:name, class:"form-control" %>
     
     <%= f.label:detail, class:"label-form" %>
     <%= f.text_area:detail, size:"40x5",class:"form-control" %>
     
      <%= f.submit "更新", class: "btn btn-primary btn-block btn-signup" %>
    　<%= f.submit "キャンセル", class: "btn btn-white btn-block btn-signup" %>

    <% end %>
  </div>
</div>