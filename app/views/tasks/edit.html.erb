<% provide(:title, 'Edit Task') %>
<h1>タスク編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  
    <%= form_with(model: @task, url: user_task_path(@user, @task), local: true, method: :patch) do |f| %>
     <%= render partial: 'shared/error_messages', locals: { obj: @task } %>
      
     <%= f.label:名称, class:"label-form" %>
     <%= f.text_field:name, class:"form-control" %>
     
     <%= f.label:詳細, class:"label-form" %>
     <%= f.text_area:detail, size:"40x5",class:"form-control" %>
     
      <%= f.submit "更新", class: "btn btn-primary btn-signup" %>
    　<%= f.submit "キャンセル", class: "btn btn-white btn-signup" %>

    <% end %>
  </div>
</div>