<% provide(:title, @user.name) %>
<h1>プロフィール</h1>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <table class="table table-borded table-condensed user-table">
      <thead>
        <tr>
          <th class="active col-md-3"><%=@user_id %></th>
          <td class="col-md-9">1</td>
        </tr>
      </thead>

      <tbody>
        <tr>
          <th class="active"><%= @user.name %></th>
          <td><%= current_user %></td>
        </tr>  
         <tr>
            <th class="active"><%= @email %></th>
            <td><%= @email %></td>
          </tr>
          <tr>
            <th class="active">作成日</th>
            <td><%= @current_date %></td>
          </tr>
      </tbody>
    </table>
  </div>    
</div>
